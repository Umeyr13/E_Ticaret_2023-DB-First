@model IEnumerable<E_Ticaret_2023.Models.Urunler>

@{
    ViewBag.Title = "Ürünler";
}

<h2>Ürünler</h2>


<table class="table">
    <tr>
        <th>
           Resim
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAciklamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriler.KategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <img src="~/Resim/@(item.UrunId).jpg" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunAciklamasi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UrunFiyati)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.UrunId }, new { @class = "btn btn-sm btn-outline-success bi bi-pencil-square" })
            @Html.ActionLink(" ", "Details", new { id = item.UrunId }, new { @class = "btn btn-sm btn-outline-warning bi bi-file-earmark" })
            @Html.ActionLink(" ", "Delete", new { id = item.UrunId }, new { @class = "btn btn-sm btn-outline-danger bi bi-trash" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Yeni Ürün", "Create", "", new { @class = "btn btn-info btn-sm" })
</p>