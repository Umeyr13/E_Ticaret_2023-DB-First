@model IEnumerable<E_Ticaret_2023.Models.Kategoriler>

@{
    ViewBag.Title = "Kategoriler";
}

<h2>Kategoriler</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.KategoriId }, new { @class = "btn btn-sm btn-outline-success bi bi-pencil-square" })
            @Html.ActionLink(" ", "Details", new { id=item.KategoriId }, new { @class = "btn btn-sm btn-outline-warning bi bi-file-earmark" })
            @Html.ActionLink(" ", "Delete", new { id=item.KategoriId }, new { @class = "btn btn-sm btn-outline-danger bi bi-trash" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Yeni Kategori", "Create", "", new { @class = "btn btn-info btn-sm" })
</p>